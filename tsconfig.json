{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "preserve",
      "lib": ["dom", "es2015", "es2017"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "baseUrl": ".",
      "paths": {
        "@themes":["src/themes"],
        "@components/*":["src/components/*"],
        "@services/*":["src/services/*"],
        "@helpers/*":["src/helpers/*"],
        "@defs": ["src/definitions"]
    }
  },
  "include": ["./src/**/*"]
}
